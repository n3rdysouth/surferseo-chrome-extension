{
  "manifest_version": 3,
  "name": "SurferSEO Extension",
  "version": "1.0",
  "description": "A Chrome extension for SurferSEO functionalities",
  "permissions": [
    "storage", "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}